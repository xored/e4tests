------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-menu "Search/File..." | click
with [get-window Search] {
    get-combo -after [get-label "Containing text:"] | set-text class
    get-button Search | click
}
with [get-view Search | get-tree] {
    get-item "MyProject/src/Class1.java \\(2 matches\\)" | get-property caption | equals "Class1.java (2 matches)" 
        | verify-true
    get-item "MyProject/src/Class2.java \\(2 matches\\)" | get-property caption | equals "Class2.java (2 matches)" 
        | verify-true
}
get-view Search | get-tree | select "MyProject/src/Class1.java \\(2 matches\\)" | get-menu "Replace Selected..." | click
with [get-window "Replace Selected Text Matches"] {
    get-combo -after [get-label "With:"] | set-text classB
    get-button OK | click
}
with [get-view "Package Explorer"] {
    click
    get-tree | select "MyProject/src/\\(default package\\)/Class1.java" 
        | select "MyProject/src/\\(default package\\)/Class1.java" | double-click
}
get-editor "Class1.java" | get-editbox | get-property text | equals "public classB classB1 {\n\n"
    + "}" | verify-true
