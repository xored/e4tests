------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Package Explorer" | get-tree | select MyProject | get-menu "New/File" | click
with [get-window "New File"] {
    get-editbox -after [get-label "File name:"] | set-text F1
    get-button Finish | click
}
get-editor F1 | get-text-viewer | type-text text
get-tab-folder -index 1 | get-property activePage | equals "*F1" | verify-true
get-button "Save (M1+S)" | click
get-tab-folder -index 1 | get-property activePage | equals F1 | verify-true
with [get-editor F1 | get-editbox] {
    set-caret-pos 1 5
    type-text "   "
}
get-tab-folder -index 1 | get-property activePage | equals "*F1" | verify-true
