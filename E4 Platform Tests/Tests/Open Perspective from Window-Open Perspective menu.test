------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-menu "Window/Open Perspective/Other..." | click
with [get-window "Open Perspective"] {
    get-table | select Resource
    get-button OK | click
}
with [get-button -index 25] {
    get-property caption | equals Resource | verify-true
    get-property selected | equals true | verify-true
}

get-eclipse-window | get-property -name title | equals "Resource - Eclipse SDK" | verify-true
