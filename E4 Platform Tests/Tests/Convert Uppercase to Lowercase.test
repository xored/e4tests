------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Package Explorer" | get-tree | select "MyProject/src/File2" | double-click
with [get-editor File2] {
    click
    with [get-text-viewer] {
        key-type "M1+a"
        set-caret-pos 6 5
        key-type "M1+a"
        key-type "M1+M2+y"
    }
}
get-editor File2 | get-editbox | get-property text | equals "this is a text of file2\n\n"
    + "aaaa\n"
    + "bbbb\n"
    + "cccc\n"
    + "dddd" | verify-true
with [get-editor File2 | get-text-viewer] {
    set-caret-pos 6 5
    key-type "M1+a"
    key-type "M1+M2+x"
}
get-editor File2 | get-editbox | get-property text | equals "THIS IS A TEXT OF FILE2\n\n"
    + "AAAA\n"
    + "BBBB\n"
    + "CCCC\n"
    + "DDDD" | verify-true
