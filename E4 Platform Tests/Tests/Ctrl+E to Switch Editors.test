------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Package Explorer" | get-tree | select "MyProject/src/\\(default package\\)/Class1.java" | double-click
get-editor "Class1.java" | click
with [get-view "Package Explorer"] {
    click
    get-tree | select "MyProject/src/\\(default package\\)/Class2.java" | double-click
}
with [get-editor "Class2.java"] {
    click
    get-text-viewer | key-type "M1+e"
}
with [get-window -from "AbstractTableInformationControl.<init>()" | get-table] {
    get-property itemCount | equals 2 | verify-true
    get-item "Class1.java" | get-property caption | equals "Class1.java" | verify-true
    get-item "Class2.java" | get-property caption | equals "Class2.java" | verify-true
}
with [get-view "Package Explorer"] {
    click
    with [get-tree] {
        select "MyProject/src/\\(default package\\)" | key-type "TRAVERSE_ESCAPE"
        key-type ESC
    }
}
with [get-editor "Class2.java"] {
    click
    get-text-viewer | set-caret-pos 5 1
    get-canvas | key-type "TRAVERSE_ESCAPE"
    with [get-text-viewer] {
        key-type ESC -times 2
        set-caret-pos 5 1
    }
}
get-editor "Class1.java" | click
get-editor "Class2.java" | click
with [get-view "Package Explorer"] {
    click
    get-tree | select "MyProject/src/\\(default package\\)" | get-menu "New/File" | click
}
with [get-window "New File"] {
    get-editbox -after [get-label "File name:"] | set-text file1
    get-button Finish | click
}
get-editor file1 | get-text-viewer | key-type "M1+e"
with [get-window -from "AbstractTableInformationControl.<init>()"  | get-table] {
    get-property itemCount | equals 3 | verify-true
    get-item file1 | get-property caption | equals file1 | verify-true
}
get-window -from "AbstractTableInformationControl.<init>()" | get-table | select file1
get-eclipse-window | key-type "M1+e"
get-window -from "AbstractTableInformationControl.<init>()"  | get-table | select "Class1.java"
get-editor "Class1.java" | click
get-tab-folder -index 1 | get-property activePage | equals "Class1.java" | verify-true
