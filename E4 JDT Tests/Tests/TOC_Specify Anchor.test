Entry-Name: .content

get-view "Package Explorer" | get-tree | select "MyProject/TOC.xml" | double-click
with [get-editor "TOC.xml"] {
    get-section "Table of Contents" | get-tree | select Book
    with [get-section "Book Details" | get-editbox -after [get-label "Anchor:"]] {
        set-text "anchor..."
        key-type "M1+s"
        
    }
    close
}
get-view "Package Explorer" | get-tree | select "MyProject/TOC.xml" | double-click
get-editor "TOC.xml" | get-section "Table of Contents" | get-tree | select Book
get-editor "TOC.xml" | get-section "Book Details" | get-editbox -after [get-label "Anchor:"] | get-property text 
    | equals "anchor..." | verify-true
