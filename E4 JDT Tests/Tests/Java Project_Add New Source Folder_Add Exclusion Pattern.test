------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Package Explorer" | get-tree | select MyProject | get-menu "Build Path/New Source Folder..." | click
with [get-window "New Source Folder"] {
    get-editbox -after [get-label "Folder name:"] | set-text qqq
    get-button "Next >" | click
    get-button "Add..." -after [get-label "Exclusion patterns:"] | click
    with [get-window "Add Exclusion Pattern"] {
        get-editbox -after [get-label "Exclusion pattern (Path relative to \'MyProject/qqq\'):"] | set-text "b*"
        get-button OK | click
    }
    get-button Finish | click
}
get-view "Package Explorer" | get-tree | select "MyProject/qqq" | get-menu "New/Class" | click
with [get-window "New Java Class"] {
    get-editbox -after [get-label "Name:"] | set-text bb
    get-button Finish | click
}
get-view "Package Explorer" | get-tree | select "MyProject/qqq" | get-menu "New/Class" | click
with [get-window "New Java Class"] {
    get-editbox -after [get-label "Name:"] | set-text aa
    get-button Finish | click
}
with [get-view "Package Explorer" | get-tree] {
    get-item "MyProject/qqq/\\(default package\\)/aa.java" | get-property caption | equals "aa.java" | verify-true
    get-item "MyProject/qqq/bb.java" | get-property caption | equals "bb.java" | verify-true
}
