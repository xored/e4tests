------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Package Explorer" | get-tree | select "MyProject/ContextHelp.xml" | double-click
with [get-editor "ContextHelp.xml"] {
    get-section "Context Help" | get-tree | select "Context/Help_Command"
    with [get-section "Command Details" | get-editbox -after [get-label "Label:"]] {
        set-text "Help_Command_new"
        key-type "M1+s"
    }
    close
}
get-view "Package Explorer" | get-tree | select "MyProject/ContextHelp.xml" | double-click
get-editor "ContextHelp.xml" | get-section "Context Help" | get-tree | select "Context/Help_Command_new"
get-editor "ContextHelp.xml" | get-section "Command Details" | get-editbox -after [get-label "Label:"] 
    | get-property text | equals "Help_Command_new" | verify-true
get-view Outline | get-tree | get-item "Definition/contexts/Context/Help_Command_new" | get-property caption 
    | equals "Help_Command_new" | verify-true
