------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Package Explorer" | get-tree | select "MyProject/src/\\(default package\\)/Class1.java" | double-click
get-editor "Class1.java" | click
with [get-tab-folder -index 1] {
    get-property activePage | equals "Class1.java" | verify-true
    get-property tabCount | equals 1 | verify-true
}
with [get-view "Package Explorer"] {
    click
    with [get-tree] {
        select "MyProject/src/\\(default package\\)/Class2.java"
        get-item "MyProject/src/\\(default package\\)/Class2.java" | drag-start 7 10
        get-item "MyProject/src/\\(default package\\)/Class2.java" | drag-enter 36 10 -detail 16 -operation 7
        get-item "MyProject/src/\\(default package\\)/Class2.java" | drag-over 101 14 -operation 7
        get-item "MyProject/JRE System Library .*" | drag-over 171 1 -operation 7
        drag-exit
    }
}
with [get-editor "Class1.java" | get-editbox] {
    drag-enter 8 126 -detail 16 -operation 7
    drag-over 101 142 -detail 1 -operation 7
    drag-exit
    drag-accept 101 142 -detail 1 -operation 7
}
get-view "Package Explorer" | get-tree | drag-set-data
get-editor "Class1.java" | get-editbox | drop 101 142 -detail 1 -operation 7
get-view "Package Explorer" | get-tree | drag-end -detail 1
get-editor "Class2.java" | click
with [get-tab-folder -index 1] {
    get-property activePage | equals "Class2.java" | verify-true
    get-property tabCount | equals 2 | verify-true
}
