------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-editbox | set-text file
with [get-window -from "SearchField.createWidget()" | get-table] {
    get-item Commands | get-property caption | equals Commands | verify-true
    get-item Menus | get-property caption | equals Menus | verify-true
    get-item New | get-property caption | equals New | verify-true
    get-item Preferences | get-property caption | equals Preferences | verify-true
}
with [get-editbox] {
    key-type "TRAVERSE_ESCAPE"
    set-text ""
}
get-view "Package Explorer" | get-tree | select "MyProject/src/\\(default package\\)/Class1.java" | double-click
get-editor "Class1.java" | click
with [get-view "Package Explorer"] {
    click
    get-tree | select "MyProject/src/\\(default package\\)/Class2.java" | double-click
}
get-editor "Class2.java" | click
get-editbox -after [get-label "1 : 1"] | set-text class
with [get-window -from "SearchField.createWidget()" | get-table] {
    get-item Editors | get-property columns -index 0 | equals Editors | verify-true
    get-item Editors | get-property columns -index 1 | equals "Class1.java - MyProject/src/Class1.java" | verify-true
    get-item Editors -index 1 | get-property columns -index 0 | equals Editors | verify-true
    get-item Editors -index 1 | get-property columns -index 1 | equals "Class2.java - MyProject/src/Class2.java" 
        | verify-true
}
with [get-editbox -after [get-label "1 : 1"]] {
    key-type "TRAVERSE_ESCAPE"
    set-text ""
}
------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac--
